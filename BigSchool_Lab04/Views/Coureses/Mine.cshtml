@model IEnumerable<BigSchool_Lab04.Models.Course>

@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mine</h2>

<div class="row">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="details">
                    <span class="lecture">
                        @course.Name
                    </span>
                    <span class="category">
                        @course.Category.Name
                    </span>
                </div>
                <div class="action">
                    @*<a href="">Edit</a>*@
                    <a href="@Url.Action("Edit","Coureses", new { id = course.Id, CategoryId = course.CategoryId })">Edit</a>
                    @*<a href="">Delete</a>*@
                    <a id="@course.Id" href="#" class="delete">Delete</a>
                </div>
            </li>
        }
    </ul>
</div>

@section scripts{
    <script>
        $(function () {
            $(".delete").click(function () {

                $.ajax({
                    type: "GET",
                    url: "../api/DeteleCourse",
                    data: { 'id': $(this).attr("id") },
                    success: function (dt) {
                        alert("ok")
                     //   $("body").load(@Url.Action("Mine","Courses"));
                    },
                    error: function (er) {
                        alert("error")
                    }
                })
            });
        });
    </script>
}